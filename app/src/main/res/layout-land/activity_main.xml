<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:padding="@dimen/globalPadding"
    tools:context="com.endurancecode.quizapp.MainActivity">

    <RelativeLayout
        android:id="@+id/leftColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/horizontalMargin"
        android:layout_marginRight="@dimen/horizontalMargin"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/ituLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/appLogoContentDescription"
            android:paddingBottom="@dimen/globalPadding"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ituLogo"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/verticalBigMargin"
                android:text="@string/welcomeText"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightCollumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/horizontalMargin"
        android:layout_marginStart="@dimen/horizontalMargin"
        android:layout_weight="1">

        <Button
            android:id="@+id/navigateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/globalPadding" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- START: First Screen -->
            <LinearLayout
                android:id="@+id/screen01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/verticalMargin"
                    android:hint="@string/question1InputHint"
                    android:inputType="textPersonName" />
            </LinearLayout>
            <!-- END: First Screen -->
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
