<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/leftColumn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/color_primary"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/cover_image_content_description"
            android:src="@drawable/cover_image" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rightColumn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/bigMargin"
            android:text="@string/songs_list_view_title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

        <ListView
            android:id="@+id/songsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/bigMargin"
            android:layout_marginLeft="@dimen/bigMargin"
            android:layout_marginEnd="@dimen/bigMargin"
            android:layout_marginRight="@dimen/bigMargin"
            android:layout_marginBottom="@dimen/bigMargin"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>