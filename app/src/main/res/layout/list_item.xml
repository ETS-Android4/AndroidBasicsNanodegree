<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/mp_vertical_big">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_image_size"
        android:layout_height="@dimen/list_item_image_size"
        android:layout_marginEnd="@dimen/mp_horizontal_big"
        android:layout_marginRight="@dimen/mp_horizontal_big"
        android:contentDescription="@string/word_image_description"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/miwokTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_text_view_height"
            android:gravity="center_vertical"
            tools:text="lutti" />

        <TextView
            android:id="@+id/englishTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_text_view_height"
            android:gravity="center_vertical"
            tools:text="one" />
    </LinearLayout>

</LinearLayout>
