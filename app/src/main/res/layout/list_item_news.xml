<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mp_horizontal_big"
        android:layout_marginLeft="@dimen/mp_horizontal_big"
        android:layout_marginTop="@dimen/mp_normal_vertical"
        android:layout_marginEnd="@dimen/mp_horizontal_big"
        android:layout_marginRight="@dimen/mp_horizontal_big"
        android:layout_marginBottom="@dimen/mp_normal_vertical"
        app:cardCornerRadius="@dimen/card_corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/mp_global_normal">

            <LinearLayout
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/mp_horizontal_big"
                android:layout_marginRight="@dimen/mp_horizontal_big"
                android:background="@drawable/rectangle_border"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/day"
                    style="@style/text_day"
                    android:layout_width="@dimen/date_width"
                    android:layout_height="@dimen/day_height"
                    android:gravity="center"
                    tools:text="28" />

                <TextView
                    android:id="@+id/month"
                    style="@style/text_month"
                    android:layout_width="@dimen/date_width"
                    android:layout_height="@dimen/month_height"
                    tools:text="Fev" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/mp_normal_vertical"
                android:paddingBottom="@dimen/mp_normal_vertical">

                <TextView
                    android:id="@+id/title"
                    style="@style/title"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/title_height"
                    tools:text="News Tittle" />

                <TextView
                    android:id="@+id/author"
                    style="@style/author"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/author_height"
                    tools:text="News Author" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>